@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ExploreCalifornia.Models.Post
@{
	Layout = "_Layout";
}

<h1>Create Blog Post</h1>

<fieldset>

	<form asp-action="Create" asp-controller="Blog">
		<div asp-validation-summary="All" class="input-validation-error"></div>
		<p>
			<label asp-for="Title"></label>
			<input asp-for="Title" class="form-controll" placeholder="Blog post title"/>
			<span asp-validation-for="Title"></span>
		</p>
		<p>
			<label asp-for="Title"></label>
			<textarea asp-for="Body" class="form-controll" placeholder="Blog post content"></textarea>
			<span asp-validation-for="Body"></span>
		</p>

		<button type="submit">Create Post</button>
	</form>

</fieldset>